<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
	<bean id="producer" class="com.appleframework.jms.rocketmq.RocketMQProducer" init-method="init" destroy-method="close">
    	<property name="namesrvAddr" value="${producer.namesrvAddr}" />
      	<property name="producerGroup" value="${producer.producerGroup}" />
    </bean>
    
    <bean id="messageProducer" class="com.appleframework.jms.rocketmq.producer.RocketMessageProducer">
		<property name="producer" ref="producer" />
		<property name="topic" value="${producer.topic}" />
		<property name="tags" value="${producer.tags}" /> 
	</bean>
	
</beans>